{
  "type": "object",
  "properties": {
    "contentType": {
      "type": "string",
      "description": "The type of content being created, such as an article, web page, email, or social media post."
    },
    "outline": {
      "type": "object",
      "properties": {
        "headings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of section headings that structure the content, useful for organizing the article or post."
        },
        "keyPoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "point": {
                "type": "string",
                "description": "A key point or section of the content."
              },
              "explanation": {
                "type": "string",
                "description": "A detailed explanation or description related to the key point."
              }
            },
            "required": ["point", "explanation"]
          },
          "description": "Detailed points that break down the content into digestible parts for readers."
        }
      },
      "required": ["headings", "keyPoints"],
      "description": "The organizational structure of the content, including headings and key points to be covered."
    },
    "seoData": {
      "tables": {
        "posts": {
          "columns": {
            "post_id": { "type": "number", "description": "ID of the post to update" },
            "post_title": { "type": "string", "description": "Title of the post" },
            "post_content": { "type": "string", "description": "Content of the post" },
            "post_status": { "type": "string", "description": "Status of the post (e.g., publish, draft)" },
            "post_date": { "type": "string", "format": "date-time", "description": "Date of post publication" }
          }
        },
        "postmeta": [
          {
            "meta_key": { "type": "string", "description": "The key for the metadata" },
            "meta_value": { "type": "string", "description": "The value for the metadata" }
          }
        ],
        "yoast_indexable": {
          "columns": {
            "id": { "type": "number", "description": "Unique ID of the indexable" },
            "permalink": { "type": "string", "description": "The URL of the post or object" },
            "permalink_hash": { "type": "string", "description": "Hash of the permalink for quick lookup" },
            "object_id": { "type": "number", "description": "ID of the related object (post, term)" },
            "object_type": { "type": "string", "description": "Type of object (e.g., post, term)" },
            "object_sub_type": { "type": "string", "description": "Sub-type of the object" },
            "author_id": { "type": "number", "description": "ID of the author" },
            "post_parent": { "type": "number", "description": "Parent post ID (if applicable)" },
            "title": { "type": "string", "description": "Optimized title" },
            "description": { "type": "string", "description": "Optimized meta description" },
            "breadcrumb_title": { "type": "string", "description": "Title displayed in breadcrumbs" },
            "post_status": { "type": "string", "description": "Post status (public, private)" },
            "is_public": { "type": "boolean", "description": "Whether the post is public" },
            "is_protected": { "type": "boolean", "description": "Whether the post is protected" },
            "has_public_posts": { "type": "boolean", "description": "Whether it has public posts" },
            "number_of_pages": { "type": "number", "description": "Number of pages if it is a paginated post" },
            "canonical": { "type": "string", "description": "Canonical URL" },
            "primary_focus_keyword": { "type": "string", "description": "Primary focus keyword" },
            "primary_focus_keyword_score": { "type": "number", "description": "Score for the primary focus keyword" },
            "readability_score": { "type": "number", "description": "Score indicating readability" },
            "is_cornerstone": { "type": "boolean", "description": "Whether this is a cornerstone content" },
            "is_robots_noindex": { "type": "boolean", "description": "Should search engines not index this post?" },
            "is_robots_nofollow": { "type": "boolean", "description": "Should search engines not follow the links?" },
            "is_robots_noarchive": { "type": "boolean", "description": "Should search engines not archive this post?" },
            "is_robots_noimageindex": { "type": "boolean", "description": "Should images not be indexed?" },
            "is_robots_nosnippet": { "type": "boolean", "description": "Should search engines not show snippets?" },
            "twitter_title": { "type": "string", "description": "Title for Twitter cards" },
            "twitter_image": { "type": "string", "description": "Image URL for Twitter cards" },
            "twitter_description": { "type": "string", "description": "Description for Twitter cards" },
            "twitter_image_id": { "type": "number", "description": "ID of the Twitter image" },
            "twitter_image_source": { "type": "string", "description": "Source of the Twitter image" },
            "open_graph_title": { "type": "string", "description": "Title for Open Graph" },
            "open_graph_description": { "type": "string", "description": "Description for Open Graph" },
            "open_graph_image": { "type": "string", "description": "Image URL for Open Graph" },
            "open_graph_image_id": { "type": "number", "description": "ID of the Open Graph image" },
            "open_graph_image_source": { "type": "string", "description": "Source of the Open Graph image" },
            "open_graph_image_meta": { "type": "string", "description": "Meta information for the Open Graph image" },
            "link_count": { "type": "number", "description": "Count of links" },
            "incoming_link_count": { "type": "number", "description": "Count of incoming links" },
            "prominent_words_version": { "type": "number", "description": "Version for prominent words analysis" },
            "created_at": { "type": "string", "format": "date-time", "description": "Creation date" },
            "updated_at": { "type": "string", "format": "date-time", "description": "Last updated date" },
            "blog_id": { "type": "number", "description": "ID of the blog" },
            "language": { "type": "string", "description": "Language of the content" },
            "region": { "type": "string", "description": "Region of the content" },
            "schema_page_type": { "type": "string", "description": "Type of schema page used" },
            "schema_article_type": { "type": "string", "description": "Article type for schema" },
            "has_ancestors": { "type": "boolean", "description": "Whether the post has ancestors" },
            "estimated_reading_time_minutes": { "type": "number", "description": "Estimated reading time in minutes" },
            "version": { "type": "number", "description": "Version of the indexable" },
            "object_last_modified": { "type": "string", "format": "date-time", "description": "Last modified date of the object" },
            "object_published_at": { "type": "string", "format": "date-time", "description": "Publication date of the object" },
            "inclusive_language_score": { "type": "number", "description": "Score for inclusive language" }
          }
        },
        "yoast_indexable_hierarchy": {
          "columns": {
            "indexable_id": { "type": "number", "description": "ID of the indexable" },
            "ancestor_id": { "type": "number", "description": "ID of the ancestor" },
            "depth": { "type": "number", "description": "Depth of the hierarchy" },
            "blog_id": { "type": "number", "description": "ID of the blog" }
          }
        },
        "yoast_primary_term": {
          "columns": {
            "id": { "type": "number", "description": "Unique ID of the primary term" },
            "post_id": { "type": "number", "description": "ID of the related post" },
            "term_id": { "type": "number", "description": "ID of the term" },
            "taxonomy": { "type": "string", "description": "Taxonomy of the term" },
            "created_at": { "type": "string", "format": "date-time", "description": "Creation date" },
            "updated_at": { "type": "string", "format": "date-time", "description": "Last updated date" },
            "blog_id": { "type": "number", "description": "ID of the blog" }
          }
        },
        "yoast_seo_links": {
          "columns": {
            "id": { "type": "number", "description": "Unique ID of the SEO link" },
            "url": { "type": "string", "description": "URL of the link" },
            "post_id": { "type": "number", "description": "ID of the related post" },
            "target_post_id": { "type": "number", "description": "ID of the target post" },
            "type": { "type": "string", "description": "Type of the link" },
            "indexable_id": { "type": "number", "description": "ID of the associated indexable" },
            "target_indexable_id": { "type": "number", "description": "ID of the target indexable" },
            "height": { "type": "number", "description": "Height of the link" },
            "width": { "type": "number", "description": "Width of the link" },
            "size": { "type": "number", "description": "Size of the link" },
            "language": { "type": "string", "description": "Language of the link" },
            "region": { "type": "string", "description": "Region of the link" }
          }
        }
      }
    }
  },
  "required": [
    "contentType",
    "outline"
  ],
  "if": {
    "properties": { "contentType": { "enum": ["article", "post", "page", "customPostType"] } }
  },
  "then": {
    "required": [
      "seoData"
    ]
  }
}